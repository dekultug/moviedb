<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTopBilledCastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Billed Cast"
            android:textColor="@color/app_primary"
            android:textSize="@dimen/dimen_text_size_18"
            android:fontFamily="@font/svn_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/dimen_16"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopBillCastItem"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/dimen_6"
            android:paddingHorizontal="@dimen/dimen_8"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_16"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTopBilledCastTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
