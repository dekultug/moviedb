<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edtSearchViewBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_stroke_blue_corner_4"
        android:paddingVertical="@dimen/dimen_10"
        android:paddingStart="@dimen/dimen_10"
        android:paddingEnd="@dimen/dimen_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSearchViewBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:src="@drawable/ic_black_close"
        android:foreground="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="@id/edtSearchViewBasic"
        app:layout_constraintTop_toTopOf="@id/edtSearchViewBasic"
        app:layout_constraintBottom_toBottomOf="@id/edtSearchViewBasic"/>

</androidx.constraintlayout.widget.ConstraintLayout>
