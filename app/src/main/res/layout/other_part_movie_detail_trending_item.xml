<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16">

        <ImageView
            android:id="@+id/ivOtherPartMovieBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_260"
            tools:src="@color/app_primary"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@color/color_transparent_dark_90"
            app:layout_constraintTop_toTopOf="@id/ivOtherPartMovieBackground"
            app:layout_constraintBottom_toBottomOf="@id/ivOtherPartMovieBackground"
            app:layout_constraintStart_toStartOf="@id/ivOtherPartMovieBackground"
            app:layout_constraintEnd_toEndOf="@id/ivOtherPartMovieBackground"/>

        <TextView
            android:id="@+id/tvOtherPartMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/part_of_the_movie"
            android:textSize="@dimen/dimen_text_size_18"
            android:fontFamily="@font/svn_bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dimen_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_50"/>

        <TextView
            android:id="@+id/tvOtherPartMovieAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_the_collection"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/shapre_bg_dark_corner_18"
            android:textColor="@color/white"
            android:fontFamily="@font/svn_bold"
            android:paddingVertical="@dimen/dimen_8"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:paddingHorizontal="@dimen/dimen_18"
            app:layout_constraintTop_toBottomOf="@id/tvOtherPartMovieName"
            app:layout_constraintStart_toStartOf="@id/tvOtherPartMovieName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
