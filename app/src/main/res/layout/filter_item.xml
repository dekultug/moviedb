<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|start"
            android:background="@drawable/shapre_bg_app_primary_corner_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_14"
                android:paddingVertical="@dimen/dimen_4"
                android:fontFamily="@font/svn_regular"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_text_size_16"
                tools:text="@string/today" />

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_1"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@drawable/ic_arrow_select" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
