<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@color/background_detail">

        <TextView
            android:id="@+id/tvGenersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_text_size_14"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/dimen_4"
            android:paddingHorizontal="@dimen/dimen_8"
            tools:text="Phim khoa hoc vien tuong"
            android:maxWidth="@dimen/dimen_120"
            android:fontFamily="@font/svn_medium"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvGenersAnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textSize="@dimen/dimen_text_size_14"
            app:layout_constraintStart_toEndOf="@id/tvGenersName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvGenersName"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/dimen_10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
