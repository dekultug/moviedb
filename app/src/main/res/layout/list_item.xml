<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_280"
        tools:layout_height="@dimen/dimen_280"
        android:layout_margin="@dimen/dimen_10"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:background="@drawable/no_img">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_transparent_app_90"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Luu Tungf"
                android:textColor="@color/white"
                android:fontFamily="@font/svn_bold"
                android:textSize="@dimen/dimen_text_size_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/dimen_10"
               android:gravity="center_vertical"
               app:layout_constraintTop_toBottomOf="@id/tvListTitle"
               app:layout_constraintStart_toStartOf="@id/tvListTitle"
               app:layout_constraintEnd_toEndOf="@id/tvListTitle">

               <TextView
                   android:id="@+id/tvListSize"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   tools:text="3 items"
                   android:textSize="@dimen/dimen_text_size_14"
                   android:textColor="@color/white"
                   android:fontFamily="@font/svn_medium" />

               <TextView
                   android:id="@+id/tvListModifier"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   tools:text="Public"
                   android:layout_marginStart="@dimen/dimen_10"
                   android:textColor="@color/white"
                   android:background="@drawable/shapre_bg_dark_corner_18"
                   android:paddingVertical="@dimen/dimen_6"
                   android:paddingHorizontal="@dimen/dimen_16"/>

           </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
